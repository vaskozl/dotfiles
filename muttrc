#Offline Imap config
set mbox_type   = Maildir
set sendmail    = /usr/bin/msmtp

set folder      = ~/.mail/
set spoolfile   = "+dove/Inbox"
set mbox        = "+dove/Archive"
set postponed   = "+dove/Drafts"
set record      = "+dove/Sent"

mailboxes +Inbox


# View good/bad mails
